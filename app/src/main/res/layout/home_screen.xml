<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.nic.PMAYSurvey.activity.HomePage" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:customfontdemo="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/title_tv"
                        style="@style/font_circular_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_centerInParent="true"
                        android:text="Home Page"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp" />


                    <ImageView
                        android:id="@+id/log_out"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:onClick="@{()-> activity.logout()}"
                        android:scaleType="centerInside"
                        android:src="@mipmap/log_out" />

                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_Block_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:text="Select Block"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="gone"
                    customfontdemo:fontName="@string/font_circular_bold" />

                <RelativeLayout
                    android:id="@+id/Block_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header"
                    android:layout_below="@+id/select_Block_tv"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:background="@drawable/rectangle_box"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"

                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_normal" />

                    <Spinner
                        android:id="@+id/block_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/select_village_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Block_layout"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:text="Select Village"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    customfontdemo:fontName="@string/font_circular_bold" />

                <RelativeLayout
                    android:id="@+id/village_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header"
                    android:layout_below="@+id/select_village_tv"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:background="@drawable/rectangle_box"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"

                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_normal" />

                    <Spinner
                        android:id="@+id/village_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/select_hab_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/village_layout"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:text="Select Habitation"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    customfontdemo:fontName="@string/font_circular_bold" />

                <RelativeLayout
                    android:id="@+id/hab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header"
                    android:layout_below="@+id/select_hab_tv"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:background="@drawable/rectangle_box"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"

                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_normal" />

                    <Spinner
                        android:id="@+id/habitation_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/hab_layout"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Enter Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter Name"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"

                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/father_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="Enter Father Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible"
                        customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/father_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter Father Name"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"

                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/seec_id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/father_name_layout"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:text="Enter Seec Id"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible"
                    customfontdemo:fontName="@string/font_circular_medium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/header"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:background="@drawable/rectangle_box"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/seec_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter Seec Id"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"

                            customfontdemo:fontName="@string/font_circular_book" />


                    </RelativeLayout>


                </LinearLayout>
                <TextView
                    android:id="@+id/take_pic_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:layout_below="@+id/seec_id_layout"
                    android:text="Take Photo"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible"
                    customfontdemo:fontName="@string/font_circular_medium" />

                <RelativeLayout
                    android:id="@+id/start_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/take_pic_tv"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:background="@drawable/rectangle_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/start_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{()-> activity.viewCamera(1)}">

                                <TextView
                                    android:id="@+id/newsTitle"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_12sdp"
                                    android:text="Start"
                                    android:textColor="#000080"

                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/dummy1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="end"
                                    android:layout_toRightOf="@+id/newsTitle"
                                    android:gravity="end"
                                    android:text="Take Photo" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="end"

                                    android:layout_toRightOf="@+id/dummy1"
                                    android:gravity="end"
                                    android:src="@drawable/camera_icon"
                                    android:text="Take Photo" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/multiple_photo_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/mulTitle"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_12sdp"
                                    android:text="Multiple"
                                    android:textColor="#000080"

                                    android:textSize="16sp" />


                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="end"

                                    android:layout_toRightOf="@+id/mulTitle"
                                    android:gravity="end"
                                    android:src="@drawable/camera_icon"
                                    android:text="Take Photo" />

                            </RelativeLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/end_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{()-> activity.viewCamera(2)}">

                                <TextView
                                    android:id="@+id/end"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_12sdp"
                                    android:text="End"
                                    android:textColor="#000080"

                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/dummy2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="end"
                                    android:layout_toRightOf="@+id/end"
                                    android:gravity="end"
                                    android:text="Take Photo" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="end"

                                    android:layout_toRightOf="@+id/dummy2"
                                    android:gravity="end"
                                    android:src="@drawable/camera_icon"
                                    android:text="Take Photo" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/sync"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_below="@+id/start_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:padding="9dp"
                    android:text="Sync Data"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14sdp"
                    android:background="@drawable/rectangle_box"
                    style="@string/font_circular_medium" />

                <TextView
                    android:id="@+id/view_pic_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:layout_below="@+id/sync"
                    android:text="View Images"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="gone"
                    customfontdemo:fontName="@string/font_circular_medium" />


                <RelativeLayout
                    android:id="@+id/end_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pic_tv"
                    android:layout_marginLeft="@dimen/margin_left_20dp"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginRight="@dimen/margin_left_20dp"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_box">


                    <TextView
                        android:id="@+id/view_offline_images"
                        style="@string/font_circular_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:text="View Offline Images"
                        android:textColor="#000080"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/view_online_images"
                        style="@string/font_circular_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:text="View Images"
                        android:textColor="#000080"
                        android:textSize="16sp" />


                </RelativeLayout>



            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>