<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.nic.PMAYSurvey.activity.TakePhotoScreen" />
    </data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background">

        <TextView
            style="@style/font_circular_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin"
            android:text="Take Photo"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_12sdp"
            android:onClick="@{()-> activity.onBackPress()}"
            android:src="@mipmap/back_arrow" />

        <ImageView
            android:id="@+id/home_img"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_12sdp"
            android:onClick="@{()-> activity.homePage()}"
            android:src="@mipmap/home_img" />

    </RelativeLayout>
    <TextView
        android:id="@+id/take_pic_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_20dp"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginRight="@dimen/margin_left_20dp"
        android:layout_below="@+id/header_layout"
        android:text="Take Photo"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp"
        android:visibility="visible"
       style="@string/font_circular_medium" />

    <RelativeLayout
        android:id="@+id/start_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/take_pic_tv"
        android:layout_marginLeft="@dimen/margin_left_20dp"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginRight="@dimen/margin_left_20dp"
        android:background="@drawable/rectangle_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/start_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()-> activity.viewCamera(1)}">

                    <TextView
                        android:id="@+id/newsTitle"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"
                        android:text="Start"
                        android:textColor="#000080"

                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dummy1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"
                        android:layout_toRightOf="@+id/newsTitle"
                        android:gravity="end"
                        android:text="Take Photo" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"

                        android:layout_toRightOf="@+id/dummy1"
                        android:gravity="end"
                        android:src="@drawable/camera_icon"
                        android:text="Take Photo" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/multiple_photo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/mulTitle"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"
                        android:text="Multiple"
                        android:textColor="#000080"

                        android:textSize="16sp" />


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"

                        android:layout_toRightOf="@+id/mulTitle"
                        android:gravity="end"
                        android:src="@drawable/camera_icon"
                        android:text="Take Photo" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/end_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()-> activity.viewCamera(2)}">

                    <TextView
                        android:id="@+id/end"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"
                        android:text="End"
                        android:textColor="#000080"

                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dummy2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"
                        android:layout_toRightOf="@+id/end"
                        android:gravity="end"
                        android:text="Take Photo" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="end"

                        android:layout_toRightOf="@+id/dummy2"
                        android:gravity="end"
                        android:src="@drawable/camera_icon"
                        android:text="Take Photo" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/save"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_below="@+id/start_activity"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="9dp"
        android:text="Save Data Locally"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp"
        android:background="@drawable/rectangle_box"
        android:visibility="gone"
        style="@string/font_circular_medium" />
</RelativeLayout>

</layout>
